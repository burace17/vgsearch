@model Game
@{
    ViewData["Title"] = "Game Info";
}

<h2>@Model.name</h2>

<table class="table-condensed">
    <tr>
        <th>Date</th>
        <th>Publisher</th>
        <th>Region</th>
        <th>Rating</th>
        <th>Platform</th>
    </tr>
    @foreach(var release in Model.Releases)
    {
        <tr>
            <td>
                @if (release.dates != null)
                {
                    @release.dates.Value.ToString("MM/dd/yyyy")
                }
                else
                {
                    @("N/A")
                }
            </td>
            <td>@release.Publisher</td>
            <td>@release.Region</td>
            <td>@release.Rating</td>
            <td>
                @foreach (var platform in release.Platforms)
                {
                    @(platform.Platform + ", ")
                }
            </td>
        </tr>
    }
</table>

<h4>Genres</h4>
<ul>
    @foreach(var genre in Model.Genres)
    {
        <li>@genre.Genre</li>
    }
</ul>